<main>
    <div class="container">
        <div class="row" id="article-list">
            <div class="col-md-12">
                <h3 class="saveddeet">SavedTedTalks</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title/Link</th>
                            <th>Speaker</th>
                            <th>Classification</th>
                            <th>Date Posted</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody {{#each savedArticles}}>
                        <tr>
                            <td>
                                <a href="https://www.ted.com{{this.link}}">{{this.title}}</a>
                            </td>
                            <td>{{this.speaker}}</td>
                            <td>{{this.classification}}</td>
                            <td>{{this.date_posted}}</td>
                            <td>
                                <button class="addanoteBtn btn btn-lg btn-success" type="submit" name="action" data-id="{{this._id}}" data-toggle="modal"
                                    data-target="#exampleModal" data-whatever="@mdo">Add a Note
                                </button>
                                <br>
                                <button class="deleteBtn btn btn-lg btn-success" type="submit" name="action" data-id="{{this.id}}">Delete from Saved</button>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>

