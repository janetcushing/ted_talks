<div class="container">
    <div class="jumbotron">
        <nav>
            <span>
                <h1>
                    <a href="/">Ted Talk Scraper</a>
                </h1>
                <a href="/">
                    <button id="homeBtn" class="btn btn-primary btn-lg">Home</button>
                </a>
            </span>
        </nav>
        <img src="/assets/images/ted-talks.png" width="90%">
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
            </div>
            <div>
                <div class="modal-body">
                    <label for="recipient-name" class="form-control-label">Previous Notes:</label>
                    <ul {{#each prevNotes}}>
                        <span>
                            <li id="{{this.noteId}}">{{this.noteId}}: {{this.note}}</li>
                            <li>
                                <button id="delete-note" class="deletenoteBtn btn btn-sm" type="submit" name="action" data-id="{{this.noteId}}" data-toggle="modal"
                                    data-target="#exampleModal" data-whatever="{{this.note}}">Delete
                                </button>
                            </li>
                        </span>
                    </ul>
                    {{/each}}
                    <br>
                    <form>
                        <div class="form-group">
                            <label for="message-text" class="form-control-label">New Note:</label>
                            <textarea class="form-control" id="message-text"></textarea>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="save-note" type="submit" class="btn btn-primary">Save Note</button>
            </div>
        </div>
    </div>
</div>