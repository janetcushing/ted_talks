<link rel="stylesheet" href="/assets/css/style.css">

<div class="container">
    <div class="jumbotron">
        <nav>
            <span>
                <h1>
                    <a href="/">Ted Talk Scraper</a>
                </h1>
                <a href="/">
                    <button id="homeBtn" class="btn btn-primary btn-lg">Home</button>
                </a>
            </span>
        </nav>
        <img src="/assets/images/ted-talks.png" width="90%">
    </div>
</div>
<main>
    <div class="container">
        <div class="row" id="article-list">
            <div class="col-md-12">
                <h3 class="saveddeet">SavedTedTalks</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title/Link</th>
                            <th>Speaker</th>
                            <th>Classification</th>
                            <th>Date Posted</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody {{#each savedArticles}}>
                        <tr>
                            <td>
                                <a href="https://www.ted.com{{this.link}}">{{this.title}}</a>
                            </td>
                            <td>{{this.speaker}}</td>
                            <td>{{this.classification}}</td>
                            <td>{{this.date_posted}}</td>
                            <td>
                                <button class="addanoteBtn btn btn-lg btn-success" type="submit" name="action" data-id="{{this._id}}" data-toggle="modal"
                                    data-target="#exampleModal" {{!-- data-whatever="@mdo" --}}>Add a Note
                                </button>
                                <br>
                                <button class="deleteBtn btn btn-lg btn-success" type="submit" name="action" data-id="{{this.id}}">Delete from Saved</button>
                            </td>
                        </tr>
                    </tbody>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <label>Previous Notes:</label>
            <div {{#each prevNotes}}>
                <p>{{this.noteId}}: {{this.note}}</p>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>

                </div>

                <div>
                    <div class="modal-dialog">
                        <label for="recipient-name" class="form-control-label">Previous Notes:</label>
                        <ul {{#each prevNotes}}>
                            <span>
                                <li id="{{this.noteId}}">{{this.noteId}}: {{this.note}}</li>

                            </span>
                        </ul>
                        {{/each}}
                    </div>
                </div>
                <br>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="message-text" class="form-control-label">New Note:</label>
                            <textarea class="form-control" id="message-text"></textarea>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="save-note" type="submit" class="btn btn-primary">Save Note</button>
            </div>
        </div>
    </div>
    </div>





</main>
<div class="container">
    <footer>
        <div class="row">
            <div class="col-md-12">
